<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="spendee.ui.filters.ScriptingFilter">

  <Label text="Script" styleClass="filter-title">
    <VBox.margin>
      <Insets bottom="10"/>
    </VBox.margin>
  </Label>

  <StackPane>
    <TextArea fx:id="scriptingFilter" promptText="function( t ) { return true; }" prefWidth="-Infinity"/>
    <Button fx:id="clearButton" styleClass="clear-button" StackPane.alignment="TOP_RIGHT">
      <graphic>
        <ImageView pickOnBounds="true" preserveRatio="true">
          <Image url="/spendee/ui/icons/clear.png"/>
        </ImageView>
      </graphic>
    </Button>
  </StackPane>
</VBox>
